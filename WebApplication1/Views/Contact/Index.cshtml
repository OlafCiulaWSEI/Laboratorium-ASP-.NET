@model Dictionary<int, WebApplication1.Models.ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>
<table class="table">
    <thead>
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Akcje
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var entry in @Model)
        {
            <tr>
                <td>
                    @entry.Value.FirstName
                </td>
                <td>
                    @entry.Value.LastName
                </td>
                <td>
                    <a class="btn btn-success">Edytuj</a>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id=@entry.Value.Id class="btn btn-info">Szczegóły</a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id=@entry.Key class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
